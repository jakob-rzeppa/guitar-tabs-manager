<form class="artist-form" method="post" action="{{ path('app_artist_new', {'tab_id': tab.id}) }}" onsubmit="return confirm('Make sure to save changes to the tab before creating a new artist or they will be lost!');">
	{% if tab.id is not null %}
		<input type="hidden" name="tab_id" value="{{ tab.id }}">
	{% endif %}
	<input type="text" name="name" placeholder="Artist Name" required>
	<button type="submit" class="form-submit">Create Artist</button>
</form>
