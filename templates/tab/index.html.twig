{% extends 'base.html.twig' %}

{% block title %}Tab index{% endblock %}

{% block body %}
    <h1>Tab index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Capo</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tab in tabs %}
            <tr>
                <td>{{ tab.id }}</td>
                <td>{{ tab.title }}</td>
                <td>{{ tab.capo }}</td>
                <td>{{ tab.content }}</td>
                <td>
                    <a href="{{ path('app_tab_show', {'id': tab.id}) }}">show</a>
                    <a href="{{ path('app_tab_edit', {'id': tab.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tab_new') }}">Create new</a>
{% endblock %}
